<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:a="http://schemas.actiprosoftware.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Design.PreviewWith>
        <Border Padding="30">
            <SplitButton Theme="{DynamicResource SplitButtonCustom}">
                <PathIcon Theme="{StaticResource IconPlayOutlined}" Classes="icon-small" Padding="4" />
            </SplitButton>
        </Border>
    </Design.PreviewWith>


    <ControlTheme x:Key="SplitButtonCustom" TargetType="SplitButton" BasedOn="{a:ControlTheme SplitButtonSoft}">
        <!--<Setter Property="BorderBrush" Value="{}"></Setter>-->

        <Style Selector="^:pointerover /template/ Button">
            <Setter Property="BorderBrush" Value="Red" />
        </Style>
    </ControlTheme>
</ResourceDictionary>