<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:a="http://schemas.actiprosoftware.com/avaloniaui"
             xmlns:shared="clr-namespace:AutoSpex.Client.Shared"
             x:Class="AutoSpex.Client.App">
    <Application.DataTemplates>
        <shared:ViewLocator/>
    </Application.DataTemplates>
    
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="Resources/Themes/NavigationTabItem.axaml" />
                <ResourceInclude Source="Resources/Themes/DetailsTabItem.axaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
    
    <Application.Styles>
        <a:ModernTheme Includes="All" />
        <StyleInclude Source="avares://DialogHost.Avalonia/Styles.xaml"/>
        <StyleInclude Source="Resources/Styles/IconStyles.axaml" />
        <StyleInclude Source="Resources/Icons/OutlinedIcons.axaml" />
        <StyleInclude Source="Resources/Icons/FilledIcons.axaml" />
        <StyleInclude Source="Resources/Icons/RegularIcons.axaml" />
    </Application.Styles>
    
   
</Application>