<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:a="http://schemas.actiprosoftware.com/avaloniaui"
             xmlns:shared="clr-namespace:AutoSpex.Client.Shared"
             x:Class="AutoSpex.Client.App">
    <Application.DataTemplates>
        <shared:PageLocator/>
    </Application.DataTemplates>
    
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="Resources/Merged.axaml" />
                <ResourceInclude Source="Components/All.axaml" />
                <ResourceInclude Source="Components/Specs/Resources/Merged.axaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
    
    <Application.Styles>
        <a:ModernTheme Includes="All" />
        <StyleInclude Source="Resources/Styles/Global.axaml" />
        <StyleInclude Source="Resources/Styles/ButtonStyles.axaml" />
        <StyleInclude Source="Resources/Styles/TextBoxStyles.axaml" />
    </Application.Styles>
    
   
</Application>