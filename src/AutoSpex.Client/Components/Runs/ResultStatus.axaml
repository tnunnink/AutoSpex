<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:a="http://schemas.actiprosoftware.com/avaloniaui"
                    xmlns:components="clr-namespace:AutoSpex.Client.Components"
                    xmlns:observers="clr-namespace:AutoSpex.Client.Observers"
                    xmlns:properties="clr-namespace:AutoSpex.Client.Resources.Properties">

    <Design.PreviewWith>
        <StackPanel Spacing="20" Margin="20">
            <a:ToggleThemeButton Theme="{a:ControlTheme ToggleThemeButtonSoft}" />
            <ContentControl
                Content="{x:Static components:TestData.DefaultResult}"
                ContentTemplate="{DynamicResource ResultStatus}" />
        </StackPanel>
    </Design.PreviewWith>

    <DataTemplate x:Key="ResultStatus" x:DataType="observers:ResultObserver">

        <StackPanel Orientation="Horizontal" Spacing="7" VerticalAlignment="Center">

            <StackPanel Orientation="Horizontal">
                <PathIcon
                    Theme="{Binding Model.Type.Name, Converter={StaticResource KeyIconConverter}}" />
                <TextBlock
                    Text="{Binding Name}"
                    FontWeight="{a:ThemeResource HeadingFontWeightSmall}"
                    Padding="5" />
            </StackPanel>

            <Ellipse Classes="separator" />

            <TextBlock
                Text="{Binding Model.Result.Source.Name}"
                FontWeight="{a:ThemeResource HeadingFontWeightSmall}"
                Padding="5" />

            <Ellipse Classes="separator" />

            <TextBlock
                Text="{Binding Result}"
                FontWeight="{a:ThemeResource HeadingFontWeightSmall}"
                properties:StyleClasses.Classes="{Binding Result}"
                Padding="5" />

            <Ellipse Classes="separator" />

            <TextBlock
                Text="{Binding Duration}"
                FontWeight="{a:ThemeResource HeadingFontWeightSmall}"
                Padding="5" />


        </StackPanel>

    </DataTemplate>

</ResourceDictionary>