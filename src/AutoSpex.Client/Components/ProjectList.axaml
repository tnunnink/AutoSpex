<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:actipro="http://schemas.actiprosoftware.com/avaloniaui"
                    xmlns:controls="using:AutoSpex.Client.Components">
    <Design.PreviewWith>
        <controls:ProjectList />
    </Design.PreviewWith>

    <ControlTheme x:Key="{x:Type controls:ProjectList}" TargetType="controls:ProjectList">
        <!-- Set Defaults -->
        <Setter Property="Template">
            <ControlTemplate>
                <Border Background="{TemplateBinding Background}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        Padding="{TemplateBinding Padding}"
                        Margin="{TemplateBinding Margin}"
                        HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
                        VerticalAlignment="{TemplateBinding VerticalAlignment}">
                    <DockPanel LastChildFill="True">
                        <Border DockPanel.Dock="Top"
                                BorderThickness="0 0 0 1"
                                BorderBrush="{actipro:ThemeResource Container1BorderBrush}">
                            <Grid ColumnDefinitions="Auto,*,Auto" Margin="10 0">

                                <!--Search-->
                                <PathIcon Grid.Column="0"
                                          Data="{StaticResource IconSearch}"
                                          Height="14" Width="14" />
                                <TextBox Grid.Column="1"
                                         Text="{TemplateBinding Filter}"
                                         BorderThickness="0"
                                         Classes="has-clear-button"
                                         Background="Transparent"
                                         Padding="10"
                                         Watermark="Search Recent Projects" />

                                <!--Buttons-->
                                <StackPanel Grid.Column="2"
                                            Orientation="Horizontal"
                                            Spacing="5"
                                            Margin="5 0 0 0">
                                    <Button x:Name="PART_CreateButton"
                                            Command="{TemplateBinding CreateCommand}"
                                            Classes="theme-subtle accent"
                                            Height="30" Padding="10 0"
                                            HorizontalContentAlignment="Stretch">
                                        <PathIcon Data="{StaticResource IconAdd}"
                                                  Height="14" Width="14" />
                                    </Button>
                                    <Button x:Name="PART_OpenButton"
                                            Command="{TemplateBinding OpenCommand}"
                                            Classes="theme-subtle"
                                            Height="30" Padding="10 0"
                                            HorizontalContentAlignment="Stretch">
                                        <PathIcon Data="{StaticResource IconFolderOutlinedOpen}" />
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <Border>
                            <!--Recent Project-->
                            <ListBox Background="Transparent"
                                     BorderThickness="0"
                                     ItemsSource="{TemplateBinding ItemsSource}"
                                     HorizontalAlignment="Stretch">
                                <ListBox.Styles>
                                    <Style Selector="ListBoxItem">
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                    </Style>
                                </ListBox.Styles>
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <controls:ProjectItem />
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Border>
                    </DockPanel>
                </Border>
            </ControlTemplate>
        </Setter>
    </ControlTheme>
</ResourceDictionary>