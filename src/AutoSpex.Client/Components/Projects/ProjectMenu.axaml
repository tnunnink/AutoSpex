<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:a="http://schemas.actiprosoftware.com/avaloniaui"
                    xmlns:pages="clr-namespace:AutoSpex.Client.Pages"
                    xmlns:observers="clr-namespace:AutoSpex.Client.Observers"
                    x:DataType="observers:ProjectObserver">
  <Design.PreviewWith>
    <Border Padding="100">
      <StackPanel Spacing="50">
        <Button ContextFlyout="{DynamicResource ProjectMenu}" Content="Test" />
      </StackPanel>
    </Border>
  </Design.PreviewWith>

  <MenuFlyout x:Key="ProjectMenu">
    
    <MenuItem Header="Open"
              Command="{Binding OpenCommand}"
              IsEnabled="{Binding Exists}">
      <MenuItem.Icon>
        <PathIcon Theme="{StaticResource IconLaunchOutlined}" />
      </MenuItem.Icon>
    </MenuItem>

    <MenuItem Header="Show In Explorer"
              Command="{Binding LocateCommand}"
              IsEnabled="{Binding Exists}">
      <MenuItem.Icon>
        <PathIcon Theme="{StaticResource IconFolderOutlined}" />
      </MenuItem.Icon>
    </MenuItem>

    <MenuItem Header="Copy Path"
              Command="{Binding CopyPathCommand}">
      <MenuItem.Icon>
        <PathIcon Theme="{StaticResource IconCopyOutlined}" />
      </MenuItem.Icon>
    </MenuItem>
    
    <MenuItem Header="Remove"
              Command="{Binding DeleteCommand}">
      <MenuItem.Icon>
        <PathIcon Theme="{StaticResource IconClose}" />
      </MenuItem.Icon>
    </MenuItem>
  </MenuFlyout>
</ResourceDictionary>