<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:a="http://schemas.actiprosoftware.com/avaloniaui"
             xmlns:viewModels="clr-namespace:AutoSpex.Client.ViewModels"
             xmlns:features="clr-namespace:AutoSpex.Client.Features"
             x:Class="AutoSpex.Client.Features.NewProjectView"
             x:DataType="features:NewProjectViewModel"
             MinWidth="500"
             Background="{a:ThemeResource Container2BackgroundBrush}"
             BorderBrush="{a:ThemeResource Container2BorderBrush}">
    <DockPanel LastChildFill="True" Margin="20">
        
        <DockPanel DockPanel.Dock="Bottom" LastChildFill="True">
            <!--buttons-->
            <StackPanel DockPanel.Dock="Right"
                        Orientation="Horizontal"
                        Spacing="10">
                <Button Content="Cancel"
                        Command="{Binding CancelCommand}"
                        Height="26" Width="70" Padding="0"
                        Theme="{a:ControlTheme ButtonSoft}" />
                <Button Content="Create"
                        Command="{Binding CreateCommand}"
                        Height="26" Width="70" Padding="0"
                        Theme="{a:ControlTheme ButtonSolid}"
                        Classes="accent"/>
            </StackPanel>
            <!--error message-->
            <Grid>
                <TextBlock Text="A project with the same path already exists."
                           TextWrapping="Wrap"
                           Classes="theme-form-control-message danger"
                           VerticalAlignment="Center"
                           IsVisible="{Binding Exists}" />
            </Grid>
        </DockPanel>

        <!--heading-->
        <StackPanel DockPanel.Dock="Top">
            <StackPanel Orientation="Horizontal">
                <PathIcon Data="{StaticResource Icon.Outlined.Cube}"
                          Foreground="{a:ThemeResource ControlForegroundBrushOutlineAccent}"
                          Height="16" Width="16"
                          Margin="0 2 10 0" />
                <TextBlock Text="New Project"
                           Classes="theme-text-heading size-sm" />
            </StackPanel>
            <TextBlock Text="Enter a name and location on disc to create the project."
                       Classes="theme-text-body size-sm"
                       Foreground="{a:ThemeResource DefaultForegroundBrushTertiary}"
                       Margin="0 10 0 0" />
        </StackPanel>

        <!--form-->
        <StackPanel Margin="0 30" Spacing="20">
            <TextBox Text="{Binding Name}"
                     Theme="{a:ControlTheme TextBoxOutline}"
                     VerticalContentAlignment="Center"
                     Watermark="Project Name" />

            <TextBox Text="{Binding Location}"
                     Theme="{a:ControlTheme TextBoxOutline}"
                     VerticalContentAlignment="Center"
                     Watermark="Project Location"
                     Classes="folder">
                <TextBox.Styles>
                    <Style Selector="TextBox">
                        <Setter Property="InnerRightContent">
                            <Template>
                                <Button DockPanel.Dock="Right"
                                        Classes="icon"
                                        IsTabStop="False"
                                        Theme="{a:ControlTheme ButtonInvisible}">
                                    <PathIcon Data="{StaticResource Icon.Outlined.Folder}"
                                              Height="16" Width="16" 
                                              Foreground="{TemplateBinding Foreground}"/>
                                </Button>
                            </Template>
                        </Setter>

                        <Style Selector="^.pointerover /template/ ContentPresenter:pointerover">
                            <Setter Property="Foreground" Value="{a:ThemeResource ControlForegroundBrushOutlineAccent}" />
                        </Style>
                    </Style>
                </TextBox.Styles>
            </TextBox>
        </StackPanel>
    </DockPanel>
</UserControl>