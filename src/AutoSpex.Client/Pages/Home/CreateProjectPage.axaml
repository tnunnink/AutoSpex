<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:a="http://schemas.actiprosoftware.com/avaloniaui"
             xmlns:home="clr-namespace:AutoSpex.Client.Pages.Home"
             xmlns:controls="clr-namespace:AutoSpex.Client.Resources.Controls"
             x:Class="AutoSpex.Client.Pages.Home.CreateProjectPage"
             x:DataType="home:CreateProjectPageModel">
    <Design.Width>1000</Design.Width>
    <Design.Height>800</Design.Height>

    <Grid ColumnDefinitions="*,Auto,*"
          RowDefinitions="*,Auto,2*">

        <StackPanel Grid.Column="1" Grid.Row="1"
                    MinWidth="400">
            <!--heading-->
            <StackPanel Orientation="Horizontal"
                        Margin="0 10">
                <PathIcon Theme="{StaticResource IconCubeOutlined}"
                          Padding="0"
                          Margin="0 3 12 0" />
                <TextBlock Text="Create Project"
                           Classes="theme-text-heading size-lg" />
            </StackPanel>
            <TextBlock Text="Specify a name and location to create a blank project."
                       Classes="caption" />

            <!--form-->
            <StackPanel Margin="0 30" Spacing="20">
                <TextBox Text="{Binding Name}"
                         Theme="{StaticResource TextBoxOutlineHighlight}"
                         VerticalContentAlignment="Center"
                         Watermark="Name"
                         UseFloatingWatermark="True" />
                
                <TextBox Text="{Binding Location}"
                         Theme="{StaticResource TextBoxOutlineHighlight}"
                         VerticalContentAlignment="Center"
                         Watermark="Location"
                         UseFloatingWatermark="True">
                    <TextBox.InnerRightContent>
                        <controls:IconButton
                            Command="{Binding SelectLocationCommand}"
                            Icon="{StaticResource IconFolderOutlined}"/>
                    </TextBox.InnerRightContent>
                </TextBox>

                <TextBox Text="{Binding Summary}"
                         Theme="{StaticResource TextBoxOutlineHighlight}"
                         Height="80"
                         Watermark="Summary"
                         UseFloatingWatermark="True" />
            </StackPanel>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Spacing="10">
                <Button Content="Cancel"
                        Command="{Binding CancelCommand}"
                        Theme="{a:ControlTheme ButtonSoft}" />
                <Button Content="Create"
                        Command="{Binding CreateCommand}"
                        Theme="{a:ControlTheme ButtonSolid}"
                        Classes="accent" />
            </StackPanel>
        </StackPanel>
    </Grid>

</UserControl>