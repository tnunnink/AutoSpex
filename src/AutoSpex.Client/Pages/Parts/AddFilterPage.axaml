<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:a="http://schemas.actiprosoftware.com/avaloniaui"
             xmlns:pages="clr-namespace:AutoSpex.Client.Pages"
             xmlns:behaviors="clr-namespace:AutoSpex.Client.Resources.Behaviors"
             x:Class="AutoSpex.Client.Pages.AddFilterPage"
             x:DataType="pages:AddFilterPageModel">

    <DockPanel>

        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Spacing="5">
            <PathIcon Theme="{StaticResource IconFilledFunnel}" />
            <TextBlock Text="Add Filter" />
        </StackPanel>


        <Button
            DockPanel.Dock="Bottom"
            Content="Add"
            Theme="{a:ControlTheme ButtonSolid}"
            Classes="accent"
            HorizontalAlignment="Right"
            VerticalAlignment="Center">
            <Interaction.Behaviors>
                <behaviors:HideFlyoutOnClickedBehavior />
            </Interaction.Behaviors>
        </Button>
        
        <StackPanel Spacing="10">
            
            
            
        </StackPanel>

    </DockPanel>

</UserControl>