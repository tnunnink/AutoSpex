<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:a="http://schemas.actiprosoftware.com/avaloniaui"
             xmlns:viewModels="clr-namespace:AutoSpex.Client.ViewModels"
             x:Class="AutoSpex.Client.Views.ProcessIndicatorVew"
             x:DataType="viewModels:ProcessIndicatorViewModel"
             Background="Transparent"
             Padding="10"
             IsVisible="{Binding IsActive}">
  
  <StackPanel Orientation="Horizontal"
              Spacing="10">
    
    <TextBlock Text="{Binding Process}" 
               TextTrimming="CharacterEllipsis"
               VerticalAlignment="Center"
               Foreground="{a:ThemeResource DefaultForegroundBrushSecondary}"/>
    
    <ProgressBar IsIndeterminate="True"
                 Height="12" Width="200"
                 Minimum="0" Maximum="100"/>
    
    <Button Theme="{a:ControlTheme ButtonSoft}"
            Command="{Binding CancelCommand}"
            CornerRadius="10" Padding="5">
      <PathIcon Data="{StaticResource Icon.Close}"
                Height="10" Width="10"
                Foreground="{a:ThemeResource DefaultForegroundBrushTertiary}"/>
    </Button>
  </StackPanel>
</UserControl>
