<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:i="https://github.com/projektanker/icons.avalonia"
        xmlns:a="http://schemas.actiprosoftware.com/avaloniaui">
    <Design.PreviewWith>
        <Border Padding="20">
            <WrapPanel>
                <Button i:Attached.Icon="fa-solid fa-plus"
                        Classes="icon"
                        Margin="10 0" />
                <i:Icon Value="fa-solid fa-plus" Margin="10 0"/>
            </WrapPanel>
        </Border>
    </Design.PreviewWith>

    <Style Selector="Button.icon">
        <Setter Property="Height" Value="30"/>
        <Setter Property="Width" Value="30"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Foreground" Value="{a:ThemeResource DefaultForegroundBrushTertiary}"/>
        <Setter Property="Theme" Value="{a:ControlTheme ButtonSubtle}" />
    </Style>
    
    <Style Selector="i|Icon">
        
    </Style>
</Styles>
